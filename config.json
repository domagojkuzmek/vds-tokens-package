{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables"
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "build/",
      "files": [
        {
          "destination": "tokens.js",
          "format": "javascript/esm",
          "options": {
            "name": "tokens",
            "minify": "true"
          }
        }
      ]
    }
  }
}
